{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@exceptions/*": [
        "src/exceptions/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@docs/*": [
        "src/docs/*"
      ],
    },
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  },
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "index.ts",
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}
